function bookSearch() {
	var search = document.getElementById('search').value
	document.getElementById('results').innerHTML=""
	console.log(search)

	$.ajax({
		url: "http://openlibrary.org/search.json?q="+search,
		dataType: "json",

		success:function(data) {
			for (var i = 0; data.docs.length; i++) {
				results.innerHTML += "<h2>"+ data.docs[i].title+"</h2>"+"<h4>"+data.docs[i].author_name+"</h4>"+"<div class=\"col-hd-4\"><img src=\"http://covers.openlibrary.org/b/id/"+data.docs[i].cover_i+"-M.jpg\" /></div>"
			}
			console.log(search);
		},

		type:'GET'
	});
}

document.getElementById('button').addEventListener('click', bookSearch,false);